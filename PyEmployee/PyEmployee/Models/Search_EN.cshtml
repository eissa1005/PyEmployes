@model IEnumerable<BOL.tbl_PyInOut>

@{
    ViewBag.Title = "Search";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2><b>Result</b></h2>

@using (Html.BeginForm("Search","Query"))
{ 
<table class="table table-striped table-bordered">
    <tr>
        <th>
            @Html.ActionLink("Employee ID", "Search", new { SortOrder = (ViewBag.SortOrder == null ? "ASC" : (ViewBag.SortOrder == "ASC" ? "Desc" : "ASC")), SortBy = "EmployeeId" })
        </th>
        <th>
            @Html.ActionLink("Employee Name", "Search", new { SortOrder = (ViewBag.SortOrder == null ? "ASC" : (ViewBag.SortOrder == "ASC" ? "Desc" : "ASC")), SortBy = "Employee_Name" })
        </th>
        <th>
            @Html.ActionLink("Date", "Search", new { SortOrder = (ViewBag.SortOrder == null ? "ASC" : (ViewBag.SortOrder == "ASC" ? "Desc" : "ASC")), SortBy = "DT" })
        </th>
        <th>
            @Html.ActionLink("Start Time", "Search", new { SortOrder = (ViewBag.SortOrder == null ? "ASC" : (ViewBag.SortOrder == "ASC" ? "Desc" : "ASC")), SortBy = "Start_IN" })
        </th>
        <th>
            @Html.ActionLink("End Time", "Search", new { SortOrder = (ViewBag.SortOrder == null ? "ASC" : (ViewBag.SortOrder == "ASC" ? "Desc" : "ASC")), SortBy = "Out_IN" })
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.EmployeeId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.tbl_Employees.Employee_Name)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.DT)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Start_IN)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Out_IN)
            </td>
        </tr>
    }

</table>
}
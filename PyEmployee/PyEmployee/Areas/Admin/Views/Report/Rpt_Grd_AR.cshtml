@Html.Grid(Model).Columns(columns =>
{
    columns.Add(foo => foo.EmployeeId).Titled("رقم الموظف").SetWidth(100).Sortable(true).Filterable(true);
    columns.Add(foo => foo.tbl_Employees.Employee_Name).Titled("اسم الموظف").SetWidth(200).Sortable(true).Filterable(true);
    columns.Add(foo => foo.DT).Titled("التاريخ").SetWidth(100).Sortable(true).Filterable(true);
    columns.Add(foo => foo.Start_IN).Titled("ساعة الحضور").SetWidth(100).Sortable(true);
    columns.Add(foo => foo.Out_IN).Titled("ساعة الانصراف").SetWidth(100).Sortable(true);
}).WithPaging(6);











